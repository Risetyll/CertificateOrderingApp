@page
@model CertificateOrderingApp.Pages.Identity.AuthorizationPageModel
@{
    ViewData["Title"] = "Authorization page";
}

<h1 class="text-center">Sign in</h1>
<div class="container w-80">
    <form method="post">
        <div class="d-flex justify-content-center">
            <div class="p-3">
                <label class="col-form-label">Your email</label>
                <input type="email" class="form-control overflow-auto" name="txtEmailField" placeholder="example@gmail.com" required>
            </div>
            <div class="p-3">
                <label class="col-form-label">Your password</label>
                <input type="password" class="form-control overflow-auto" name="txtPasswordField" placeholder="************" required>
            </div>
        </div>
        <div class="d-flex justify-content-center p-5">
            <button class="btn btn-primary" type="submit" asp-page-handler="submit">Sign in</button>
        </div>
    </form>
</div>
